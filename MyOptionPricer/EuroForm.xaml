<UserControl x:Class="MyOptionPricer.EuroForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <StackPanel HorizontalAlignment="Left" Margin="50,50,0,50" Width="220">
        <!-- Strike Price -->
        <Label Content="Strike Price" FontSize="20"/>
        <TextBox Tag="Enter strike price" 
                 FontSize="14" Margin="0 0 0 10"/>

        <!-- Spot Price -->
        <Label Content="Spot Price" FontSize="20"/>
        <TextBox Tag="Enter spot price" 
                 FontSize="14" Margin="0 0 0 10"/>

        <!-- Risk-Free Rate -->
        <Label Content="Risk-Free Rate (%)" FontSize="20"/>
        <TextBox Tag="Enter annual rate" 
                 FontSize="14" Margin="0 0 0 10"/>

        <!-- Volatility -->
        <Label Content="Volatility (%)" FontSize="20"/>
        <TextBox Tag="Enter volatility" 
                 FontSize="14" Margin="0 0 0 10"/>

        <!-- Time to Maturity -->
        <Label Content="Time to Maturity (years)" FontSize="20"/>
        <TextBox Tag="Enter time period" 
                 FontSize="14" Margin="0 0 0 20"/>
    </StackPanel>
</UserControl>